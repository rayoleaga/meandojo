<!DOCTYPE html>
<html>
<head>
	<title>Dashboard | home</title>
</head>
<!-- Jquery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<!-- Bootstrap Javascript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<script type="text/javascript" src="/js/main.js"></script>
<!-- Bootstrap -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="/css/styles.css">

<body>
	<div id="sidebar">
		<img src="/img/mongoose-profile.jpg" alt="Mongoose Icon" width="160" id="profile">
		<form action="/mongooses" method="post">
			<h3>Add a new Mongoose</h3>
			<input type="text" name="name">
			<input type="submit" value="Add New">
		</form>
	</div>
	<div id="info">
		<table class="table table-striped">
			<thead>				
				<tr>
					<td>Name</td>
					<td>Edit</td>
					<td>Delete</td>
				</tr>
			</thead>
			<tbody>				
					<% for (var i in response) { %>
				<tr>

					<td><a href="/animal/<%= response[i]._id %>"><%= response[i].name %></a></td>
					<td><form action="/animal/<%= response[i]._id %>/edit" method="get">
							<input type="submit" value="Edit" class="btn btn-info">
						</form>
					</td>
					<td>
						<form action="/remove/<%= response[i]._id %>" method="post">
							<input type="submit" value="X" class="btn btn-danger">
						</form>
					</td>
				</tr>
					 <% } %>

				<tr>
					
				</tr>
			</tbody>


			

		</table>
	</div>
</body>
</html>
